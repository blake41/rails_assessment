<h1>Listing posts</h1>
 
<table>

 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td></td>

    <td><%= link_to 'Show', post %></td>
    <td></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td></td>
    <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
  </tr>
<% end %>
</table>

